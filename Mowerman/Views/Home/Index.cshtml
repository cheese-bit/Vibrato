@{
    ViewData["Title"] = "Home Page";
}

<div class="text-sm-left">
    <h1 class="display-4">MowerMan</h1>

</div>
<style>
    body {
        background-image: url('css/lawn.jpg');
        background-repeat: no-repeat;
        background-size: 2000px 912px;
    }

    h1 {
        margin: auto;
    }

    #demo {
        margin-top: 400px;
    }

    .myDiv {
        text-align: center;
        margin-top: 200px;
    }

        .myDiv.display-4 {
            text-shadow: inherit;
        }

    #container {
        margin-top: 200px;
    }

        #container.text-lg-left {
            margin-top: 500px;
        }

    .contact-form {
        background: rgba(0,0,0, .6);
        color: white;
        margin-top: 100px;
        padding: 20px;
        box-shadow: 0px 0 px 10px 3px grey;
    }
